{
  "name": "koinos-as-sdk",
  "version": "0.3.0",
  "main": "assembly/index.ts",
  "license": "MIT",
  "author": "Roamin Roe <roamin@tuta.io>",
  "repository": "https://github.com/roaminroe/koinos-as-sdk",
  "dependencies": {
    "as-proto": "^0.2.0"
  },
  "devDependencies": {
    "@types/node": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "as-proto-gen": "^0.1.0",
    "assemblyscript": "^0.19.22",
    "eslint": "^8.7.0",
    "koinos-abi-proto-gen": "^0.1.1",
    "source-map-support": "^0.5.21",
    "typedoc": "^0.22.12",
    "typescript": "^4.5.5"
  },
  "scripts": {
    "buildSDK:debug": "asc assembly/index.ts --target debug --use abort=",
    "buildSDK:release": "asc assembly/index.ts --target release --use abort=",
    "buildSDK": "npm run lintSDK && npm run buildSDK:debug && npm run buildSDK:release",
    "lintSDK": "eslint --max-warnings 0 --ext ts \"assembly/**/*.ts\"",
    "compileTransform": "tsc tools/koinos-contract-transform.ts",
    "prepublishOnly": "yarn run compileTransform",
    "generateKoinosProtoFiles": "protoc -I ./koinos-proto --plugin=protoc-gen-as=./node_modules/.bin/as-proto-gen --as_out=. ./koinos-proto/koinos/*.proto ./koinos-proto/koinos/**/*.proto",
    "generateGoogleProtoFiles": "protoc --plugin=protoc-gen-as=./node_modules/.bin/as-proto-gen --as_out=. ./google/protobuf/any.proto",
    "generateTestABI": "protoc --plugin=protoc-gen-abi=./node_modules/.bin/koinos-abi-proto-gen --abi_out=test/abi test/assembly/proto/foobar.proto",
    "generateTestProtoFiles": "protoc --plugin=protoc-gen-as=./node_modules/.bin/as-proto-gen --as_out=. ./test/assembly/proto/*.proto",
    "lintTest": "eslint --max-warnings 0 --ext ts \"test/assembly/**/*.ts\"",
    "buildTest:debug": "asc test/assembly/index.ts --target debug --use abort= --config test/asconfig.json",
    "buildTest:release": "asc test/assembly/index.ts --target release --use abort= --config test/asconfig.json",
    "buildTest": "npm run lintTest && npm run buildTest:debug && npm run buildTest:release",
    "buildDoc": "typedoc --includeVersion --tsconfig assembly/tsconfig.json"
  }
}
